<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">
 
	
	<context:component-scan base-package="com.zhenghu.demo.web" />
	
	<bean id="authenticatorImpl" class="com.zhenghu.demo.web.authentification.AuthenticatorImpl"/>
	<bean id="loginAction" class="com.zhenghu.demo.web.actions.LoginAction"/>

    <bean id="welcomeAction" class="com.zhenghu.demo.web.actions.WelcomeAction"/>
    <bean id="informationBean" class="com.zhenghu.demo.web.model.InformationBean"/>
 
</beans>
